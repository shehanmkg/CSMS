{
  "name": "csms-ocpp-server",
  "version": "0.1.0",
  "description": "Charging Station Management System with OCPP 1.6J support",
  "main": "src/app.js",
  "scripts": {
    "dev": "nodemon src/app.js",
    "start": "node src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "client": "node test-client.js",
    "test:charging": "node src/scripts/test-charging.js",
    "demo": "node src/scripts/full-charging-cycle.js",
    "status": "node src/scripts/set-connector-status.js",
    "start-tx": "node src/scripts/start-transaction.js",
    "stop-tx": "node src/scripts/stop-transaction.js",
    "meter": "node src/scripts/send-meter-value.js",
    "boot": "node src/scripts/boot-notification.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "uuid": "^11.1.0",
    "winston": "^3.10.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/ocpp/**/*.js",
      "src/websocket/**/*.js",
      "!src/tests/**"
    ]
  },
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shehanmkg/CSMS.git"
  },
  "keywords": [
    "OCPP",
    "EV",
    "charging",
    "station",
    "management"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shehanmkg/CSMS/issues"
  },
  "homepage": "https://github.com/shehanmkg/CSMS#readme"
}
